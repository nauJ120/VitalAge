<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Sección: Consulta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalidad de la consulta" />
        <Spinner
            android:id="@+id/spFinalidadConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Causa externa" />
        <Spinner
            android:id="@+id/spCausaExterna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo de consulta" />
        <EditText
            android:id="@+id/etMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enfermedad actual" />
        <EditText
            android:id="@+id/etEnfermedadActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayuda diagnóstica" />
        <EditText
            android:id="@+id/etAyudaDiagnostica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <!-- Sección: Antecedentes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes ginecológicos" />
        <EditText
            android:id="@+id/etAntecedenteGinecologico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes alérgicos" />
        <EditText
            android:id="@+id/etAntecedenteAlergico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes quirúrgicos" />
        <EditText
            android:id="@+id/etAntecedenteQuirurgico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes patológicos" />
        <EditText
            android:id="@+id/etAntecedentePatologico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes farmacológicos" />
        <EditText
            android:id="@+id/etAntecedenteFarmacologico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes toxicológicos" />
        <EditText
            android:id="@+id/etAntecedenteToxicologico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros antecedentes" />
        <EditText
            android:id="@+id/etAntecedenteOtro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes familiares" />
        <EditText
            android:id="@+id/etAntecedenteFamiliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Sección: Examen y diagnóstico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisión por sistemas" />
        <EditText
            android:id="@+id/etRevisionSistemas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Examen físico" />
        <EditText
            android:id="@+id/etExamenFisico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Análisis" />
        <EditText
            android:id="@+id/etAnalisis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnóstico principal" />
        <EditText
            android:id="@+id/etDxPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de diagnóstico" />
        <Spinner
            android:id="@+id/spTipoDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tratamiento" />
        <EditText
            android:id="@+id/etTratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendación" />
        <EditText
            android:id="@+id/etRecomendacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Nota Médica"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
