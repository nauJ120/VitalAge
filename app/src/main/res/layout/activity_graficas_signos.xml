<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_light_blue_300"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Volver"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvSubtitulo"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tendencia de Signos Vitales"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pepe Gonzalez"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CONTENIDO CON GRÁFICAS -->
    <ScrollView
        android:id="@+id/scrollSignos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/navigationBar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- EJEMPLO: sección para una gráfica -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frecuencia Cardíaca"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />


            <!-- Botones de rango de tiempo -->
            <LinearLayout
                android:id="@+id/rangeButtonsFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button android:id="@+id/btnFC1D" android:text="1D" style="@style/TimeButton"/>
                <Button android:id="@+id/btnFC5D" android:text="5D" style="@style/TimeButton"/>
                <Button android:id="@+id/btnFC1M" android:text="1M" style="@style/TimeButton"/>
            </LinearLayout>

            <!-- Gráfico -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartFrecuenciaCardiaca"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"/>

            <!-- Repite este bloque para los demás signos vitales (temperatura, presión, etc.) -->

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER / NAVBAR -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Botón Inicio -->
        <LinearLayout
            android:id="@+id/btnHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                app:tint="#1E88E5"/>
            <View
                android:id="@+id/indicatorHome"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="#1E88E5"
                android:visibility="gone"/>
        </LinearLayout>

        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#DDDDDD"/>

        <!-- Botón Perfil -->
        <LinearLayout
            android:id="@+id/btnProfileContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                app:tint="#4A90E2"/>
            <View
                android:id="@+id/indicatorProfile"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="#4A90E2"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
