<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvMedicationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paracetamol"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4A90E2"/>

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad: 2"
        android:textSize="14sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvDosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosis: 500 mg"
        android:textSize="14sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvObservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observaciones: Ninguna"
        android:textSize="14sp"
        android:textColor="#777777" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrado por: Auxiliar Juan"
        android:textSize="14sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: 14/02/2025 08:00 AM"
        android:textSize="14sp"
        android:textColor="#777777" />
</LinearLayout>
