<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/etMedicationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del medicamento"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMedicationDose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosis"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMedicationVia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vía"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMedicationFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frecuencia"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMorningTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora Mañana"
        android:inputType="text" />

    <EditText
        android:id="@+id/etAfternoonTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora Tarde"
        android:inputType="text" />

    <EditText
        android:id="@+id/etNightTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora Noche"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnDialogAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar" />

        <Button
            android:id="@+id/btnDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
