<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 2025-02-09"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Presión Arterial -->
        <TextView
            android:id="@+id/tvPresion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presión Arterial: 120/80 mmHg"
            android:textSize="14sp" />

        <!-- Frecuencia Cardíaca -->
        <TextView
            android:id="@+id/tvFrecuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia Cardíaca: 75 BPM"
            android:textSize="14sp" />

        <!-- Saturación de Oxígeno -->
        <TextView
            android:id="@+id/tvOxigeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturación de Oxígeno: 98%"
            android:textSize="14sp" />

        <!-- Temperatura -->
        <TextView
            android:id="@+id/tvTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura: 36.5°C"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
