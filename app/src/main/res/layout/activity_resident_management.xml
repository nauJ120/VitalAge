<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_light_blue_300"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GestiÃ³n de Residentes"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="start"/>

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrador"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- LISTA DE RESIDENTES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResidents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/navigationBar"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <!-- BOTÃ“N FLOTANTE PARA AGREGAR RESIDENTE (AHORA EN LA POSICIÃ“N CORRECTA) -->
    <!-- ðŸ”¥ Ahora estÃ¡ sobre el menÃº inferior, no sobre el header -->

    <!-- MENÃš INFERIOR -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddResident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/navigationBar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/md_blue_500"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/btnHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#4A90E2"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD"/>

        <LinearLayout
            android:id="@+id/btnProfileContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile"
                app:tint="#4A90E2"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
