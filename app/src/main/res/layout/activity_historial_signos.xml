<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".HistorialSignosActivity">

    <!-- Barra superior con color -->
    <View
        android:id="@+id/barraTitulo"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@color/light_blue_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título Principal -->

    <!-- Menú Desplegable -->

    <TextView
        android:id="@+id/tituloSignosVitales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historial_signos_vitales"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/barraTitulo"
        app:layout_constraintBottom_toBottomOf="@id/barraTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/men"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/barraTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/barraTitulo" />

    <!-- Información del Usuario -->

    <!-- Tarjeta de Signos Vitales -->
    <TextView
        android:id="@+id/informacionUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pepe Gonzalez   Paciente: Bryan Caicedo"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barraTitulo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignosVitales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informacionUsuario">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado -->
            <TextView
                android:id="@+id/pacienteNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paciente Bryan Caicedo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ultimoRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Último registro: 29/10/2024"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Lista de Signos Vitales -->
            <TextView
                android:id="@+id/textFrecuenciaCardiaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="• Frecuencia Cardíaca - Normal"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textFrecuenciaRespiratoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Frecuencia Respiratoria - Normal"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textSaturacionOxigeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Saturación Oxígeno - Normal"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPresionArterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Presión Arterial - Elevada"
                android:textColor="#FF0000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textTemperaturaCorporal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Temperatura Corporal - Elevada"
                android:textColor="#FF0000"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/nurseIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="612dp"
        android:contentDescription="@string/icono_de_enfermera"
        android:src="@drawable/ic_nurse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>





