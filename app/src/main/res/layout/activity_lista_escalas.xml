<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ðŸ“Œ Encabezado -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_light_blue_300"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="Lista de Escalas"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Pepe Gonzalez"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- ðŸ“Œ Datos del Paciente -->
    <LinearLayout
        android:id="@+id/cardResident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/header"
        android:padding="12dp">

        <!-- Foto del residente -->
        <ImageView
            android:id="@+id/imgResident"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_resident"
            android:contentDescription="Resident Photo"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            app:tint="#4A90E2" />

        <!-- InformaciÃ³n del residente -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResidentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JoaquÃ­n Gomez"
                android:textSize="20sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvResidentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 123456789 â€¢ Sexo: Hombre â€¢ Edad: 74"
                android:textSize="14sp"
                android:textColor="#777777"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ“Œ BotÃ³n "Filtros" alineado a la derecha -->
    <Button
        android:id="@+id/btn_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/cardResident"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/md_cyan_500"
        android:text="Filtros (0)"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_filter"
        android:drawablePadding="8dp"
        android:padding="10dp" />

    <!-- ðŸ“Œ RecyclerView para la lista de escalas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_scales"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/btn_filters"
        android:layout_above="@id/navigationBar"
        android:background="#FFFFFF"
        android:layout_marginHorizontal="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- ðŸ“Œ Mensaje de aviso -->
    <TextView
        android:id="@+id/tv_empty_list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No se encontrÃ³ ningÃºn elemento"
        android:textSize="18sp"
        android:textColor="#808080"
        android:gravity="center" />

    <!-- ðŸ“Œ BotÃ³n flotante para agregar nueva escala -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/navigationBar"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/md_cyan_500"
        app:tint="@android:color/white" />

    <!-- ðŸ“Œ Barra de NavegaciÃ³n Inferior -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- BotÃ³n de Inicio -->
        <LinearLayout
            android:id="@+id/btnHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#4A90E2" />
        </LinearLayout>

        <!-- Separador entre los Ã­conos -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD" />

        <!-- BotÃ³n de Perfil -->
        <LinearLayout
            android:id="@+id/btnProfileContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                app:tint="#4A90E2" />
        </LinearLayout>
    </LinearLayout>

    <!-- MenÃº de filtros -->
    <LinearLayout
        android:id="@+id/filter_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_filters"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#EFEFEF">

        <!-- Filtros por Tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Filtros por Encargado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encargado"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_nurse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Filtro por Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha (DÃ­a / Mes / AÃ±o)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="DÃ­a"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background" />
                <EditText
                    android:id="@+id/et_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mes"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background" />
                <EditText
                    android:id="@+id/et_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="AÃ±o"
                    android:inputType="number"
                    android:maxLength="4"
                    android:background="@drawable/edittext_background" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de Aplicar y Reiniciar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_apply_filters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/md_cyan_500"
                android:text="Aplicar"
                android:textColor="@android:color/white"
                android:padding="12dp" />
            <Button
                android:id="@+id/btn_reset_filters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F44336"
                android:text="Reiniciar"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

