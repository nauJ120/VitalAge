<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_light_blue_300"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Residente"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="start"/>

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrador"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- FORMULARIO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/navigationBar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre Completo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="4dp"/>

            <EditText
                android:id="@+id/etResidentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el nombre del residente"
                android:padding="12dp"/>

            <!-- Edad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="4dp"
                android:paddingTop="12dp"/>

            <EditText
                android:id="@+id/etResidentAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ingrese la edad"
                android:padding="12dp"/>



            <!-- Género -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="4dp"
                android:paddingTop="12dp"/>

            <EditText
                android:id="@+id/etResidentGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el género"

                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cédula"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="4dp"
                android:paddingTop="12dp"/>

            <EditText
                android:id="@+id/etResidentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la cédula"
                android:padding="12dp"/>

            <!-- BOTONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="24dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F44336"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnSaveResident"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#03A9F4"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- MENÚ INFERIOR -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/btnHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#4A90E2"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD"/>

        <LinearLayout
            android:id="@+id/btnProfileContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile"
                app:tint="#4A90E2"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
