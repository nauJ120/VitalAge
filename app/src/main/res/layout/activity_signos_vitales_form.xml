<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Header personalizado -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/md_light_blue_300">

        <!-- Fila con botón de retroceso y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Volver"
                android:layout_marginEnd="16dp"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Signos Vitales"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nuevo TextView debajo del header -->
        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial del paciente"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Formulario principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/navigationBar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <!-- Campo reutilizable -->
            <!-- Repite este bloque para cada campo con el icono, nombre, unidad, y EditText -->

            <!-- Ejemplo: Frecuencia cardíaca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Frecuencia cardíaca"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etFrecuenciaCardiaca"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="BPM"
                    android:inputType="number"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lungs"
                    app:tint="#00BCD4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Frecuencia respiratoria"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etFrecuenciaRespiratoria"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="rpm"
                    android:inputType="number"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_drop"
                    app:tint="#3F51B5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Saturación de oxígeno"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etSaturacionOxigeno"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="%"
                    android:inputType="number"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_pressure"
                    app:tint="#FF5722" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Presión arterial"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etPresionArterial"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="mmHg"
                    android:inputType="text"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_thermometer"
                    app:tint="@android:color/holo_red_light" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Temperatura"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etTemperatura"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="°C"
                    android:inputType="numberDecimal"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_weight"
                    app:tint="#3F51B5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Peso"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etPeso"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="kg"
                    android:inputType="numberDecimal"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_body_index"
                    app:tint="@android:color/holo_blue_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Índice de Masa Corporal"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/etIMC"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:hint="IMC"
                    android:inputType="numberDecimal"
                    android:textAlignment="viewEnd" />
            </LinearLayout>



            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:backgroundTint="@color/md_red_500"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirmar"
                    android:backgroundTint="@color/md_blue_500"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer navegación -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/btnHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home"
                app:tint="#4A90E2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnProfileContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                app:tint="#4A90E2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
