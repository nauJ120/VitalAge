<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/item_background">

    <!-- Línea superior: Nombre y Dosis -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nombre del Medicamento -->
        <TextView
            android:id="@+id/tvMedicationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Paracetamol"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#222222"
            android:textStyle="bold" />

        <!-- Dosis -->
        <TextView
            android:id="@+id/tvMedicationDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="500mg"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#444444"
            android:gravity="end" />
    </LinearLayout>

    <!-- Línea inferior: Vía y Horarios -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="4dp">

        <!-- Vía de Administración -->
        <TextView
            android:id="@+id/tvMedicationObservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oral"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:gravity="start" />

        <!-- Horario -->
        <TextView
            android:id="@+id/tvMedicationSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="8:00 AM • 2:00 PM • 10:00 PM"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#777777"
            android:gravity="end" />
    </LinearLayout>

</LinearLayout>
