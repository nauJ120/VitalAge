<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="#FFFFFF"
    android:elevation="6dp"
    android:radius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 13/03/2025"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0077B6" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Detalles con iconos -->
        <TextView
            android:id="@+id/tvFrecuenciaCardiaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❤️ Frecuencia Cardíaca: 80 bpm"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvFrecuenciaRespiratoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💨 Frecuencia Respiratoria: 18 rpm"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvSaturacionOxigeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🫁 Saturación de Oxígeno: 98%"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvPresionArterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🩸 Presión Arterial: 120/80 mmHg"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌡️ Temperatura: 36.7 °C"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚖️ Peso: 70 kg"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvImc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 IMC: 23.4"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvEncargado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😷 Encargado: Pepe gonzalez"
            android:textSize="14sp"
            android:textColor="#333333" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
