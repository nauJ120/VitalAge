<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTerapiaTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terapia Física"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTerapiaFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 12/03/2025"
            android:textSize="14sp"
            android:textColor="#777777"/>

        <TextView
            android:id="@+id/tvTerapiaEncargado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encargado: María López"
            android:textSize="14sp"
            android:textColor="#777777"/>

        <TextView
            android:id="@+id/tvTerapiaEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Realizada"
            android:textSize="14sp"
            android:textColor="#4CAF50"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
